<form action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Post Title: <input id="name" type="text" name="name" value="<%=@post.name%>">
  Post Content: <input id="content" type="text" name="content" value="<%=@post.content%>">
  <input type="submit" id='submit'>
</form>
